{% extends 'base.html.twig' %}

{% block title %}Hello SignupController!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">


    <body>
    <header class="sticky-top">
        <div class="header">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">
                    <div>
                        <a href="{{ path('app_mainpage') }}" class="d-inline-flex text-decoration-none">
                            <img class="img-logo" src="{{ asset('img/logo.png') }}" alt="">
                        </a>
                    </div>

                    <ul class="nav col-12 col-md-auto justify-content-center">
                        <li><a href="{{ path('app_mainpage') }}" class="nav-link px-2 text-light">HOME</a></li>
                        <li><a href="{{ path('app_contact') }}" class="nav-link px-2 text-light">CONTACT</a></li>
                    </ul>
                    <div class="d-flex justidy-content-center">
                        <button class="btn" type="button" data-bs-toggle="offcanvas"
                                data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
                            <h2><i class="bi bi-person-circle text-light"></i></h2>
                        </button>

                        <div class="offcanvas offcanvas-start text-bg-white d-flex flex-column rounded-4"
                             data-bs-scroll="true" tabindex="-1"
                             id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
                            <div class="offcanvas-header" style="background-color: #f0eeee;">
                                <h4 class="mb-0 head-text text-black">Your Account</h4>
                                <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"
                                        aria-label="Close"></button>
                            </div>


                            <div class="offcanvas-body flex-grow-1 overflow-auto d-flex justify-content-center align-items-center">
                                <!-- Product Cards -->
                                <div class="head-text text-black">
                                    <!-- Empty Cart Message -->
                                    <div id="cart-items" class="text-center">
                                        <!-- Empty Cart Message -->
                                        <div>
                                            <img src="{{ asset('img/account.png') }}" style="width: 100px;" alt="">
                                            <br><br>
                                            <h5 class="head-text text-black">You are not signed in</h5>
                                            <div>
                                                <a href="{{ path('app_checkout') }}">
                                                    <button class="btn btn-warning checkout-btn w-100 mb-3">Sign in
                                                    </button>
                                                </a>
                                                <a href="{{ path('app_register') }}">
                                                    <button class="btn btn-warning checkout-btn w-100 mb-3">Sign up
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- shopping bag -->
                        <!-- Shopping Cart Button -->
                        <button class="btn bg-transparent border border-0" type="button" data-bs-toggle="offcanvas"
                                data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar"
                                aria-label="Toggle navigation">
                            <h2><i class="bi bi-cart text-light"></i></h2>
                        </button>

                        <!-- Offcanvas for Shopping Cart -->
                        <div class="offcanvas offcanvas-end text-bg-white d-flex flex-column rounded-4" tabindex="-1"
                             id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                            <div class="offcanvas-header" style="background-color: #f0eeee;">
                                <h4 class="mb-0 head-text text-black">Your Cart</h4>
                                <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"
                                        aria-label="Close"></button>
                            </div>

                            <div class="offcanvas-body flex-grow-1 overflow-auto d-flex justify-content-center align-items-center">
                                <!-- Product Cards -->
                                <div id="cart-items" class="text-center">
                                    <!-- Empty Cart Message -->
                                    <div>
                                        <img src="{{ asset('img/spoon-and-fork.png') }}" style="width: 100px;" alt="">
                                        <br><br>
                                        <h5 class="head-text text-black">Your cart is empty</h5>
                                    </div>
                                </div>
                            </div>


                            <!-- Summary Section -->
                            <div class="mt-auto p-4 shadow-sm border rounded">
                                <a href="{{ path('app_checkout') }}">
                                    <button class="btn btn-warning checkout-btn w-100 mb-3">Proceed to Checkout</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>

    <div class="row vh-100 g-0">
        <div class="container">
            <div class="row align-items-center justify-content-center h-70 g-0 px-1 px-sm-0">
                <div class="col col-sm-6 col-lg-7 col-xl-6">
                    <div class="d-flex justify-content-center">
                        <img src="{{ asset('img/logo.png') }}" alt="" width="180">
                    </div>
                    <div class="text-center mb-5">
                        <h3 class="head-text text-black">Sign up</h3>
                        <p class="text-secondary text-black">Create a new account</p>

                    </div>
                    <!-- Signup form -->
                    {{ form_start(registrationForm) }}

                        <div class="input-group mb-3 gap-3">
                            {{ form_widget(registrationForm.first_name,{'attr': {'class':'form-control','placeholder': 'Enter your Name'}}) }}
                            {{ form_widget(registrationForm.last_name,{'attr': {'class':'form-control','placeholder': 'Enter your Last name'}}) }}
                        </div>

                        <div class="input-group mb-3">

                             {{ form_widget(registrationForm.email,{'attr': {'class':'form-control','placeholder': 'Enter your E-mail'}}) }}
                        </div>
                        <div class="input-group mb-3">
                            {{ form_widget(registrationForm.phone_number,{'attr': {'class':'form-control','placeholder': 'Enter your Phone-Number'}}) }}
                        </div>
                        <div class="input-group mb-3">
                            {{ form_widget(registrationForm.plainPassword,{'attr': {'class':'form-control','placeholder': 'Enter your password'}}) }}
                        </div>
                        <div class="input-group mb-3 gap-3">
                            {{ form_widget(registrationForm.address,{'attr': {'class':'form-control','placeholder': 'Enter your Adress'}}) }}
                            {{ form_widget(registrationForm.zipp_code,{'attr': {'class':'form-control','placeholder': 'Enter your ZIpCode'}}) }}
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="formCheck">
                            <label for="formCheck" class="form-check-label text-secondary">
                                <small>Keep me updated by email with the latest new offers.</small>
                            </label>
                        </div>
                        <button class="btn head-text text-white btn-lg w-100 mb-3 fs-5" type="submit" style="background-color: #330c08;">Create an account </button>
                    {{ form_end(registrationForm) }}
                    <div class="text-center">
                        <small class="text-black fs-5">Have an account? <a href="login.php" class="fw-bold">Log in</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </main>
    </body>
{% endblock %}

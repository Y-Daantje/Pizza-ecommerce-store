{% extends 'base.html.twig' %}

 {% block title %}Hello ContactController!{% endblock %}

 {% block body %}
     <link rel="stylesheet" href="{{ asset('css/style.css') }}">

     <body>
     <header class="sticky-top" style="background-color: #331302FF;">
         <div class="header">
             <div class="container">
                 <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">
                     <div>
                         <a href="{{ path('app_mainpage') }}" class="d-inline-flex text-decoration-none">
                             <img class="img-logo" src="{{ asset('img/logo.png') }}" alt="">
                         </a>
                     </div>

                     <ul class="nav col-12 col-md-auto justify-content-center">
                         <li><a href="{{ path('app_admin_home') }}" class="nav-link px-2 text-light">STATUS</a></li>
                         <li><a href="{{ path('app_admin_catagory_home') }}"
                                class="nav-link px-2 text-light">CATAGORY</a></li>
                         <li><a href="{{ path('app_admin_product_home') }}" class="nav-link px-2 text-light">PRODUCT</a>
                         </li>
                     </ul>

                     <div class="d-flex justify-content-center">
                         <!-- User Account Button -->
                         <button class="btn" type="button" data-bs-toggle="offcanvas"
                                 data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
                             <h2><i class="bi bi-person-circle text-light"></i></h2>
                         </button>

                         <!-- Account Offcanvas -->
                         <div class="offcanvas offcanvas-start text-bg-white d-flex flex-column rounded-4"
                              data-bs-scroll="true" tabindex="-1"
                              id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
                             <div class="offcanvas-header" style="background-color: #f0eeee;">
                                 <h4 class="mb-0 head-text text-black">
                                     {% if app.user %}
                                         {{ app.user.firstName }}'s Account
                                     {% else %}
                                         Guest Account
                                     {% endif %}
                                 </h4>
                                 <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"
                                         aria-label="Close"></button>
                             </div>

                             <div class="offcanvas-body flex-grow-1 overflow-auto d-flex justify-content-center align-items-center">

                                 <div class="head-text text-black">
                                     <div id="cart-items" class="text-center">
                                         {% if app.user %}
                                             <!-- Show user name when logged in -->

                                             <div class="btn btn-warning checkout-btn w-100 mb-3">
                                                 <a href="{{ path('app_logout') }}" class=" head-text text-black link-offset-2 link-underline link-underline-opacity-0">Logout</a>
                                             </div>

                                         {% else %}
                                             <img src="{{ asset('img/account.png') }}" style="width: 200px;" alt="">
                                             <a href="{{ path('app_login') }}">
                                                 <button class="btn btn-warning checkout-btn w-100 mb-3">Login</button>
                                             </a>
                                             <a href="{{ path('app_register') }}">
                                                 <button class="btn btn-warning checkout-btn w-100 mb-3">Sign up</button>
                                             </a>
                                         {% endif %}
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>

     </header>

     <main>
         <div class="container mt-5 mb-5">
             <br>
             <h1 class="head-text text-black">
                 VEGETARISCH PIZZA
             </h1>
             <br>
             <div class="row">
                 {% for pizzaVega in pizzaVegas %}
                     <div class="col-sm-12 col-md-6 col-lg-4 p-3">
                         <div class="card border border-white border-5 card1">
                             <img src="{{ asset(pizzaVega.image) }}" class="card-img-top" alt="...">
                             <div class="card-body d-flex flex-column">
                                 <h5 class="card-title mb-2 text-dark">{{ pizzaVega.name }}</h5>
                                 <p class="card-text text-muted small">
                                     {{ pizzaVega.discription }}
                                 </p>
                                 <div class="mt-auto">
                                     <div class="badge bg-warning text-white fs-6 fw-bold mb-2">
                                         {{ pizzaVega.price }}
                                     </div>
                                     <div class="row justify-content-center">
                                         <div class="d-flex justify-content-center align-items-center gap-2">
                                             <div>
                                                 <a href="{{ path('app_admin_product_delete', {'id': pizzaVega.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-trash3"></i>
                                                         Delete
                                                     </button>
                                                 </a>
                                             </div>
                                             <div>
                                                 <a href="{{ path('app_admin_product_update', {'id': pizzaVega.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-pencil"></i>
                                                         Update
                                                     </button>
                                                 </a>
                                             </div>
                                             <div>
                                                 <a href="{{ path('app_admin_product_detail', {'id': pizzaVega.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-binoculars"></i>
                                                         Read
                                                     </button>
                                                 </a>
                                             </div>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 {% endfor %}
             </div>
             <br>
             <hr>
             <br>
             <h1 class="head-text text-black">
                 VLEES PIZZA
             </h1>
             <br>

             <br>
             <div class="row">
                 {% for pizzaVlees in pizzasVleess %}
                     <div class="col-sm-12 col-md-6 col-lg-4 p-3">
                         <div class="card border border-white border-5 card1">
                             <img src="{{ asset(pizzaVlees.image) }}" class="card-img-top" alt="...">
                             <div class="card-body d-flex flex-column">
                                 <h5 class="card-title mb-2 text-dark">{{ pizzaVlees.name }}</h5>
                                 <p class="card-text text-muted small">
                                     {{ pizzaVlees.discription }}
                                 </p>
                                 <div class="mt-auto">
                                     <div class="badge bg-warning text-white fs-6 fw-bold mb-2">
                                         {{ pizzaVlees.price }}
                                     </div>
                                     <div class="row justify-content-center">
                                         <div class="d-flex justify-content-center align-items-center">
                                             <div class="me-2">
                                                 <a href="{{ path('app_admin_product_delete', {'id': pizzaVlees.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-trash3"></i>
                                                         Delete
                                                     </button>
                                                 </a>
                                             </div>
                                             <div>
                                                 <a href="{{ path('app_admin_catagory_update', {'id': pizzaVlees.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-pencil"></i>
                                                         Update
                                                     </button>
                                                 </a>
                                             </div>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 {% endfor %}
             </div>
             <hr>
             <br>
             <h1 class="head-text text-black">
                 VIS PIZZA
             </h1>
             <br>

             <br>
             <div class="row">
                 {% for pizzaVis in pizzaViss %}
                     <div class="col-sm-12 col-md-6 col-lg-4 p-3">
                         <div class="card border border-white border-5 card1">
                             <img src="{{ asset(pizzaVis.image) }}" class="card-img-top" alt="...">
                             <div class="card-body d-flex flex-column">
                                 <h5 class="card-title mb-2 text-dark">{{ pizzaVis.name }}</h5>
                                 <p class="card-text text-muted small">
                                     {{ pizzaVis.discription }}
                                 </p>
                                 <div class="mt-auto">
                                     <div class="badge bg-warning text-white fs-6 fw-bold mb-2">
                                         {{ pizzaVis.price }}
                                     </div>
                                     <div class="row justify-content-center">
                                         <div class="d-flex justify-content-center align-items-center">
                                             <div class="me-2">
                                                 <a href="{{ path('app_admin_catagory_delete', {'id': pizzaVis.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-trash3"></i>
                                                         Delete
                                                     </button>
                                                 </a>
                                             </div>
                                             <div>
                                                 <a href="{{ path('app_admin_catagory_update', {'id': pizzaVis.id}) }}">
                                                     <button class="head-text btn" style="background-color: #331302FF;">
                                                         <i class="bi bi-pencil"></i>
                                                         Update
                                                     </button>
                                                 </a>
                                             </div>
                                         </div>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 {% endfor %}
             </div>
             <a href="{{ path('app_admin_product_add') }}">
                 <button class="head-text btn" style="background-color: #331302FF;">
                     Add Pizza
                 </button>
             </a>
         </div>

     </main>
     <!-- footer -->


     </body>
 {% endblock %}
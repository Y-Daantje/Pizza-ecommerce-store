{% extends 'base.html.twig' %}

{% block title %}Hello MainpageController!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    <body>

    <header class="sticky-top" style="background-color: #331302FF;">
        <div class="header">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3">
                    <div>
                        <a href="{{ path('app_mainpage') }}" class="d-inline-flex text-decoration-none">
                            <img class="img-logo" src="{{ asset('img/logo.png') }}" alt="">
                        </a>
                    </div>

                    <ul class="nav col-12 col-md-auto justify-content-center">
                        <li><a href="{{ path('app_admin_home') }}" class="nav-link px-2 text-light">STATUS</a></li>
                        <li><a href="{{ path('app_admin_catagory_home') }}"
                               class="nav-link px-2 text-light">CATAGORY</a></li>
                        <li><a href="{{ path('app_admin_product_home') }}" class="nav-link px-2 text-light">PRODUCT</a>
                        </li>
                    </ul>

                    <div class="d-flex justify-content-center">
                        <!-- User Account Button -->
                        <button class="btn" type="button" data-bs-toggle="offcanvas"
                                data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
                            <h2><i class="bi bi-person-circle text-light"></i></h2>
                        </button>

                        <!-- Account Offcanvas -->
                        <div class="offcanvas offcanvas-start text-bg-white d-flex flex-column rounded-4"
                             data-bs-scroll="true" tabindex="-1"
                             id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
                            <div class="offcanvas-header" style="background-color: #f0eeee;">
                                <h4 class="mb-0 head-text text-black">
                                    {% if app.user %}
                                        {{ app.user.firstName }}'s Account
                                    {% else %}
                                        Guest Account
                                    {% endif %}
                                </h4>
                                <button type="button" class="btn-close btn-close-black" data-bs-dismiss="offcanvas"
                                        aria-label="Close"></button>
                            </div>

                            <div class="offcanvas-body flex-grow-1 overflow-auto d-flex justify-content-center align-items-center">

                                <div class="head-text text-black">
                                    {% if app.user %}
                                        <div class="btn btn-warning checkout-btn w-100 mb-3">
                                            <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% else %}
                                        <a href="{{ path('app_login') }}">
                                            <button class="btn btn-warning checkout-btn w-100 mb-3">Login</button>
                                        </a>
                                        <a href="{{ path('app_register') }}">
                                            <button class="btn btn-warning checkout-btn w-100 mb-3">Sign up</button>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <main>
        <div class="container p-3">
            <h1 class="head-text text-black">Update Pizza Purchase Status</h1>

            <br>
            <form action="{{ path('app_admin_status_update', {'id': pizzaPurchase.id}) }}" method="POST">
                <div class="form-group">
                    <label for="status">Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="Your pizza order has been received! We're preparing your delicious pizza now."
                                {% if pizzaPurchase.status == "Your pizza order has been received! We're preparing your delicious pizza now." %}selected{% endif %}>
                            Your pizza order has been received! We're preparing your delicious pizza now.
                        </option>
                        <option value="Your pizza is in the oven, baking to perfection. Almost ready!"
                                {% if pizzaPurchase.status == "Your pizza is in the oven, baking to perfection. Almost ready!" %}selected{% endif %}>
                            Your pizza is in the oven, baking to perfection. Almost ready!
                        </option>
                        <option value="Your pizza is on its way! A delivery driver is bringing it to your address."
                                {% if pizzaPurchase.status == "Your pizza is on its way! A delivery driver is bringing it to your address." %}selected{% endif %}>
                            Your pizza is on its way! A delivery driver is bringing it to your address.
                        </option>
                        <option value="Your pizza has been delivered! Enjoy your meal!"
                                {% if pizzaPurchase.status == "Your pizza has been delivered! Enjoy your meal!" %}selected{% endif %}>
                            Your pizza has been delivered! Enjoy your meal!
                        </option>
                    </select>
                </div>
                <br>
                <br>
                <button type="submit" class="head-text btn w-100 text-white" style="background-color: #331302FF;">Update Status</button>
            </form>

            <br>
            <a href="{{ path('app_admin_home') }}"> <button type="submit" class="head-text btn  text-white" style="background-color: #331302FF;"> Back to orders</button></a>

        </div>
    </main>
    <footer>
        <div class="container">
            <footer class="py-5">
                <div class="row">
                    <div class="col-6 col-md-2 mb-3">
                        <img class="img-logo" src="{{ asset('img/logo.png') }}" alt="">


                    </div>

                    <div class="col-6 col-md-2 mb-3">
                        <h4 class="head-text">OpeningsTijd:</h4>
                        <ul class="nav flex-column">
